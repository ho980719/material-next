generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Zone {
  id       Int        @id @default(autoincrement())
  name     String     @unique
  memo     String?
  materials Material[]
}

model Material {
  id       Int    @id @default(autoincrement())
  name     String
  quantity Int
  zoneId   Int
  zone     Zone   @relation(fields: [zoneId], references: [id])

  @@index([zoneId])
}
