generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Zone {
  id   Int     @id @default(autoincrement())
  name String  @unique
  memo String?
  materials Material[]

  @@index([name])
}

model Material {
  id       Int    @id @default(autoincrement())
  name     String
  quantity Int?   @default(0)
  zoneId   Int
  zone     Zone   @relation(fields: [zoneId], references: [id])

  @@index([zoneId])
  @@index([name])
}
